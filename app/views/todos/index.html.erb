<% @todos.each do |todo| %>

<div class="container well">
  <div class="row">
      <div class="col-md-4">
        <h1> <%= link_to todo.description, todo %></h1>
      </div>
      <div class="col-md-4">
        <h2> <%= todo.completed %></h2>
      </div>
      <div class="col-md-4">
        <%= link_to 'Editar', editar_path(todo) , class:'btn btn-success'%>
        <%= link_to 'Eliminar', borrar_path(todo), method: :delete, data: { confirm: 'Estas seguro de eliminar?' } , class:'btn btn-danger'%>
        <%= link_to 'Completar', completar_path(todo), class:'btn btn-success'%>
      </div>
  </div>
</div>
<% end %>
