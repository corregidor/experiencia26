

<div class="well">
    <div class="container seccion">
  		<div class="row">
  			<!--Primera Columna-->
  			<div class="col-md-6">
          <h1>Tareas completas</h1>
          <% @todos.each do |todo| %>
            <div class="container-fluid">
              <% if todo.completed %>
                <li><%= todo.description %></li>
              <% end %>
            </div>
          <% end %>
  			</div>
        <!--Segunda Columna-->
  			<div class="col-md-6">
          <h1>Tareas incompletas</h1>
          <% @todos.each do |todo| %>
            <div class="container-fluid">
              <% if !todo.completed %>
                <li><%= todo.description %></li>
              <% end %>
            </div>
          <% end %>
  			</div>
  		</div>
  	</div>
</div>
